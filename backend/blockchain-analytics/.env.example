# ============================================
# LOCAL DEVELOPMENT CONFIGURATION
# ============================================

# Database Configuration (Local)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5433/ai_blockchain
SPRING_DATASOURCE_USERNAME=user
SPRING_DATASOURCE_PASSWORD=password

# Server Configuration (Local)
SERVER_PORT=8081

# JPA Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# CORS Configuration (Local)
ALLOWED_ORIGINS=http://localhost:3000

# Covalent API Configuration (Optional)
COVALENT_API_KEY=your_covalent_api_key_here

# ============================================
# PRODUCTION CONFIGURATION (Railway)
# ============================================
# Railway provides these automatically:
# - DATABASE_URL (PostgreSQL connection)
# - PORT (assigned dynamically)
#
# You need to configure in Railway dashboard:
# - ALLOWED_ORIGINS=https://your-app.vercel.app
# - COVALENT_API_KEY=your_key (optional)
